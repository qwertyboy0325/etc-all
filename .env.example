# ETC Point Cloud Annotation System - Environment Configuration
# Copy this file to .env and update the values for your environment

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_DB=etc_pointcloud_prod
POSTGRES_USER=root
POSTGRES_PASSWORD=change_this_secure_password_123

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================================================
# MinIO Object Storage Configuration
# ============================================================================
MINIO_HOST=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change_this_minio_secret_key_123
MINIO_BUCKET=pointcloud-files
MINIO_SECURE=false

# ============================================================================
# Application Security
# ============================================================================
# Generate a secure secret key (at least 32 characters)
# Example: openssl rand -hex 32
SECRET_KEY=change_this_jwt_secret_key_at_least_32_characters_long

# ============================================================================
# CORS Configuration
# IMPORTANT: Must be a JSON array format with double quotes
# ============================================================================
# For production, specify your domain:
BACKEND_CORS_ORIGINS=["https://your-domain.com","http://localhost"]
# For development/testing, you can allow all origins:
# BACKEND_CORS_ORIGINS=["*"]

# ============================================================================
# Application Settings
# ============================================================================
DEBUG=False
ENVIRONMENT=production

# ============================================================================
# Admin User (First Superuser)
# ============================================================================
FIRST_SUPERUSER_EMAIL=admin@your-domain.com
FIRST_SUPERUSER_PASSWORD=change_this_admin_password_123
FIRST_SUPERUSER_NAME=Admin

# ============================================================================
# Dataset Export Configuration
# ============================================================================
DATASET_EXPORT_PATH=/data/datasets

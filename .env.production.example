# Production Environment Configuration Example
# Copy this file to .env on your production server

# Database
POSTGRES_DB=etc_pointcloud_prod
POSTGRES_USER=etc_admin
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD

# MinIO
MINIO_ACCESS_KEY=CHANGE_ME_ACCESS_KEY
MINIO_SECRET_KEY=CHANGE_ME_SECRET_KEY
MINIO_BUCKET=pointcloud-files

# Application
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
BACKEND_CORS_ORIGINS=["https://your-domain.com"]

# Admin User
FIRST_SUPERUSER_EMAIL=admin@your-domain.com
FIRST_SUPERUSER_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
FIRST_SUPERUSER_NAME=System Administrator

# Paths
DATASET_EXPORT_PATH=/data/datasets

# Application Mode
DEBUG=False
ENVIRONMENT=production

# GCP Production Environment Variables
# Copy this file to .env.production and update the values

# GCP Configuration
PROJECT_ID=your-gcp-project-id
ZONE=asia-east1-a
CLUSTER_NAME=etc-pointcloud-cluster
REGION=asia-east1

# Database Configuration
POSTGRES_DB=etc_pointcloud_prod
POSTGRES_USER=root
POSTGRES_PASSWORD=your-secure-password

# Redis Configuration
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0

# MinIO Configuration
MINIO_HOST=minio-service
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=pointcloud-files
MINIO_SECURE=false

# Application Configuration
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
DEBUG=False
ENVIRONMENT=production

# CORS Configuration (JSON array format)
BACKEND_CORS_ORIGINS=["https://your-domain.com","http://localhost"]

# Storage Configuration
BUCKET_NAME=your-project-id-etc-pointcloud-storage
STATIC_IP=your-static-ip-address

# Domain Configuration
DOMAIN=your-domain.com



